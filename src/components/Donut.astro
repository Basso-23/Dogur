---
import { HiOutlineShoppingBag } from "react-icons/hi";
const { name, price, buy, new_, image } = Astro.props;
---

<div
  class="w-full sm:w-[min(90vw,350px)] h-[min(100vw,400px)] bg-[#f5f5f5] rounded-2xl mx-auto p-3 relative shadowStory"
>
  {/* MAIN CONTAINER----------------------------------------------- */}
  <div class="w-full h-[75%] bg-white rounded-2xl relative">
    {/* IMAGE CONTAINER----------------------------------------------- */}
    <div class="w-full h-full p-4 absolute">
      <div class={`w-full h-full donut1 ${image}`}></div>
    </div>

    {/* NEW CONTAINER----------------------------------------------- */}
    <div class={`top-0 left-0 ${new_} p-[10px] flex`}>
      <div
        class="py-1 px-4 bg-[#E7FC55] rounded-full font-medium text-[min(3.5vw,15px)]"
      >
        New
      </div>
    </div>
  </div>
  {/* DESCRIPTION CONTAINER----------------------------------------------- */}
  <div class="flex flex-col bottom-0 absolute mb-[15px] left-0 ml-4">
    <div class="text-[min(4.5vw,17px)] text-[#878787]">{name}</div>
    <div class="text-[min(6.5vw,25px)] font-medium">{price}</div>
  </div>
  {/* DBUY BUTTON----------------------------------------------- */}
  <div class="flex absolute bottom-0 right-0 mr-4 mb-[30px]">
    <div
      class="w-[min(11vw,43px)] h-[min(11vw,43px)] text-[min(5vw,19px)] bg-[#9959d0] rounded-full flex text-white cursor-pointer"
    >
      <div class="m-auto"><HiOutlineShoppingBag class="m-auto" /></div>
    </div>
  </div>
</div>
