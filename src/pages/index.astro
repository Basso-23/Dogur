---
import Layout from "../layouts/Layout.astro";
import Donut from "../components/Donut.astro";
---

<Layout title="Donuts!">
  {/* MAIN----------------------------------------------- */}
  <main class="w-full min-h-screen bg-[#E6E7E1]">
    {/* BANNER----------------------------------------------- */}
    <div class="w-full md:h-[882px] h-screen banner relative flex shadow-xl">
      {/* BANNER CONTAINER----------------------------------------------- */}
      <div
        class="max-w-[1500px] w-full mx-auto self-end text-white z-50 flex flex-col gap-4 px-3"
      >
        {/* TITLE----------------------------------------------- */}
        <div class="text-[min(15vw,80px)] font-semibold">
          Dive into Donut Paradise!
        </div>
        {/* SUBTITLE----------------------------------------------- */}
        <div class="text-[min(4.5vw,19px)] max-w-[882px] font-light">
          Join Us in a Journey of Culinary Exploration, Where a World of Flavors
          Awaits in Every Bite. Our Donuts Are More Than Just Pastries; They Are
          Handcrafted Pieces of Art Designed to Elevate Your Senses.
        </div>
        {/* SHOP NOW BUTTON----------------------------------------------- */}
        <div class="text-[min(3.7vw,16px)] font-semibold flex pb-20 pt-6">
          <div class="bg-[#9959d0] py-[14px] px-7 rounded-full cursor-pointer">
            Shop Now
          </div>
        </div>
      </div>
      {/* BOT SHADOW----------------------------------------------- */}
      <div class="w-full h-full bannerShadowBot absolute"></div>
    </div>
    {/* CATALOGUE CONTAINER----------------------------------------------- */}

    <div class="pt-24 w-full flex flex-col text-[#080808] px-3">
      {/* TITLE----------------------------------------------- */}
      <div class="mx-auto font-semibold text-[min(5vw,22px)] tracking-tight">Catalogue</div>
      <div
        class="font-semibold text-[min(13vw,60px)] mx-auto text-center pt-2 "
      >
        <div>Your Donut</div>
        <div class="">Adventure Starts Here</div>
      </div>
      {/* DONUTS CONTAINER----------------------------------------------- */}
      <div
        class="w-full max-w-[1250px] bg-white rounded-3xl mt-10 grid xl:grid-cols-3 lg:grid-cols-2 grid-rows-2 gap-y-10 py-10 mx-auto"
      >
        <Donut name="Snow Donut" price="$1.5/pcs" buy="buyNum1" new_="" />
        <Donut
          name="Taro Preketek"
          price="$1.2/pcs"
          buy="buyNum2"
          new_="hidden"
        />
        <Donut
          name="Strawberry Whimsie"
          price="$1.5/pcs"
          buy="buyNum3"
          new_="hidden"
        />
        <Donut name="Caramaelow" price="$1.5/pcs" buy="buyNum4" new_="hidden" />
        <Donut name="Doreng" price="$1.5/pcs" buy="buyNum5" new_="" />
        <Donut
          name="Polisi Bulan Purnama"
          price="$2/pcs"
          buy="buyNum6"
          new_="hidden"
        />
      </div>
    </div>
    <div class="w-full h-[1000px]"></div>
  </main>
</Layout>

